<?language javascript?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" fx:id="gridRoot" onMouseMoved="#gameOver">
    <HBox fx:id="menuBox" visible="true">
    <VBox GridPane.columnIndex="0" prefWidth="1000" styleClass="outer">
        <ProgressIndicator fx:id="progress" styleClass="progress" visible="false"/>
        <Label fx:id="menuL" styleClass="counter" text=""></Label>
    </VBox>
    <VBox GridPane.columnIndex="1" prefWidth="360" prefHeight="650" styleClass="menu">
        <Label fx:id="menu" styleClass="mainLabel1">MENU</Label>
        <Label styleClass="line"></Label>
        <VBox alignment="CENTER" spacing="50" styleClass="inner">
            <Button fx:id="btn1" styleClass="buttons" onAction="#startGame">Start Game</Button>
            <Button fx:id="btn2" styleClass="buttons" onAction="#settingGame">Settings</Button>
            <Button fx:id="btn3" styleClass="buttons" onAction="#quitGame">Quit Game</Button>
        </VBox>
    </VBox>
    </HBox>
    <HBox fx:id="settingBox" visible="false">
        <VBox GridPane.columnIndex="0" prefWidth="1000" styleClass="outer">
            <Button styleClass="button1" onAction="#backToMenu" fx:id="back">BACK</Button>
        </VBox>
        <VBox GridPane.columnIndex="1" prefWidth="360" prefHeight="550" styleClass="settings" alignment="CENTER" spacing="5">
            <Label styleClass="mainLabel1" fx:id="setting">SETTINGS</Label>
            <Label styleClass="line"></Label>
            <Label id="volume" styleClass="label1" fx:id="volume">Volume</Label>
            <Slider fx:id="slider" styleClass="slider" max="1" onMouseReleased="#sliderRead" value="0.5"/>
            <Label fx:id="labelSlider" styleClass="label1"></Label>
            <Label styleClass="label1" fx:id="lang">Language</Label>
            <HBox alignment="CENTER" spacing="20" styleClass="hb">
                <Button fx:id="slovak" styleClass="buttonLan1" prefWidth="50" prefHeight="30" onMouseEntered="#setSlovak"></Button>
                <Button fx:id="english" styleClass="buttonLan2" prefWidth="50" prefHeight="30" onMousePressed="#setEnglish"></Button>
            </HBox>
            <Label styleClass="line"></Label>
            <Button styleClass="button2" onAction="#submitChanges" fx:id="submit">SUBMIT</Button>
            <fx:script>
                var i = slider.getValue();
                var j = i*100;
                labelSlider.setText(j.toString(10));
            </fx:script>
        </VBox>
    </HBox>
    <HBox fx:id="gameMain" visible="false">
        <VBox GridPane.columnIndex="0" minWidth="-Infinity" prefWidth="1360" alignment="TOP_CENTER">
            <Label styleClass="gameOver">GAME OVER</Label>
            <Button fx:id="button1" styleClass="buttonOver" onAction="#backToMenu">BACK</Button>
        </VBox>

    </HBox>
    <HBox fx:id="winGame" visible="false">
        <VBox GridPane.columnIndex="0" minWidth="-Infinity" prefWidth="1360" alignment="TOP_CENTER">
            <Label styleClass="gameOver">YOU WIN!</Label>
            <Button fx:id="button2" styleClass="buttonOver" onAction="#backToMenu">BACK TO MENU</Button>
        </VBox>
    </HBox>
</GridPane>
